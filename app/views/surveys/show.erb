<h3 class="center"></h3>
<%= @survey.title %>
<%= @question.text %>

<form action = "/surveys/<%=@survey.id%>/questions/<%=@question.id%>" method="post">
   <% @question.choices.each_with_index do |choice, index| %>
     <input type="radio" name="<%=index + 1%>" value="<%=choice.text%>"> <%=choice.text%>
   <% end %>
</form>

<a class="" href="/surveys/new">Make a new survey</a>
